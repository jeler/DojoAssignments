@model dojo_league.Models.Dojo


@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="row">
        <div class="col">
            <h2>All Dojos</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                    </tr>
                </thead>
            @{
                foreach(var info in ViewBag.dojos) {
                    <tbody>
                        <tr>
                            <td><a href="/Dojos/@info.id">@info.name</a></td>
                        </tr>
                    </tbody>
                }
            }
            </table>
        </div>
        <div class="col">
            <h2>Register a Dojo</h2>
            <form asp-controller="Home" asp-action="dojoprocess" method="post">
                <p>Dojo Name:</p>
                <input asp-for="name">
                <p>Dojo Location:</p>
                <input asp-for="location">                
                <p>Additional Dojo Information</p>
                <textarea rows="4" cols ="50" input asp-for="information"></textarea>
                <p><button type="submit" class="btn btn-primary"> Add!</button></p>
            </form>
        </div>
    </div>
</div>